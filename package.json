{
	"name": "tally-ts",
	"version": "0.1.0",
	"description": "A TypeScript word counting library. Count the number of characters, words, sentences, paragraphs, and lines in your text instantly with tally-ts.",
	"keywords": [
		"character counter",
		"word counter",
		"sentence counter",
		"paragraph counter",
		"line counter",
		"text analysis",
		"text analyzer",
		"text statistics",
		"library",
		"typescript"
	],
	"license": "MIT",
	"author": {
		"name": "John Goodliff",
		"url": "https://johng.io"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twocaretcat/tally-ts.git"
	},
	"homepage": "https://johng.io/p/tally-ts",
	"bugs": "https://github.com/twocaretcat/tally-ts/issues",
	"funding": [
		{
			"type": "individual",
			"url": "https://johng.io/funding"
		},
		{
			"type": "GitHub Sponsors",
			"url": "https://github.com/sponsors/twocaretcat"
		},
		{
			"type": "Patreon",
			"url": "https://patreon.com/twocaretcat"
		},
		{
			"type": "Brave Creators",
			"url": "https://publishers.basicattentiontoken.org/en/c/johng"
		}
	],
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./legacy": {
			"types": "./dist/legacy.d.ts",
			"default": "./dist/legacy.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"prepare": "npm run build",
		"prepack": "npm run build",
		"typecheck": "tsc --noEmit",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"upgrade-interactive": "bun npm-check-updates -i --format group"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"npm-check-updates": "^19.1.2",
		"prettier": "3.6.2",
		"typescript": "^5.9.3"
	}
}
